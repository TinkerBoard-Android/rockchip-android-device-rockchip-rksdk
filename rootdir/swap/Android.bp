soong_config_module_type {
    name: "fstab_rockchip_soong_gen_defaults",
    module_type: "genrule_defaults",
    config_namespace: "fstab_rockchip",
    bool_variables: ["low_ram"],
    properties: ["cmd"],
}

fstab_rockchip_soong_gen_defaults {
    name: "fstab_gen_defaults",
    soong_config_variables: {
        low_ram: {
            cmd: "sed -e s/@ZRAM_SIZE@/75%/ $(in) > $(out)",
            conditions_default: {
                cmd: "sed -e s/@ZRAM_SIZE@/50%/ $(in) > $(out)",
            },
        },
    },
}

genrule {
    name: "gen_fstab_swap.zram_size",
    defaults: ["fstab_gen_defaults"],
    srcs: ["fstab_swap.in"],
    out: ["fstab_swap.zram_size"],
}

genrule {
    name: "gen_fstab_swap.ext256",
    srcs: [":gen_fstab_swap.zram_size"],
    out: ["fstab_swap.ext256"],
    cmd: "sed -e s/@ZRAM_BACKING_SIZE@/,max_comp_streams=4,zram_backingdev_size=256M/ $(in) > $(out)",
}

genrule {
    name: "gen_fstab_swap.ext512",
    srcs: [":gen_fstab_swap.zram_size"],
    out: ["fstab_swap.ext512"],
    cmd: "sed -e s/@ZRAM_BACKING_SIZE@/,max_comp_streams=4,zram_backingdev_size=512M/ $(in) > $(out)",
