genrule {
    name: "gen_fstab_swap.extnone",
    srcs: [":gen_fstab_swap.zram_size"],
    out: ["fstab_swap.extnone"],
    cmd: "sed -e s/@ZRAM_BACKING_SIZE@// $(in) > $(out)",
}

prebuilt_etc {
    name: "fstab_swap.ext256",
    src: ":gen_fstab_swap.ext256",
    vendor: true,
    vendor_ramdisk_available: true,
}

